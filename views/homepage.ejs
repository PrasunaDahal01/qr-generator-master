<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>QrCodeGeneration</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <style>
      body {
        background-color: #102c57;
      }
      .box {
        border: 2px solid #000;
        background-color: #f2e8c6;
        border-radius: 8px;
      }
      .button {
        border-radius: 8px;
        background-color: rgb(216, 129, 41);
        border: 2px solid rgb(198, 108, 17);
        color: aliceblue;
        margin-right: 15px;
      }
    </style>
  </head>
  <body>
    <div
      class="container d-flex justify-content-center align-items-center vh-100"
    >
      <div class="text-center box p-4">
        <div class="row">
          <div class="col-12">
            <h1 class="mb-4">Generate QrCode:</h1>
            <button class="button mt-3" id="qrpage">QrCode Generator</button>
            <button class="button" id="scanpage">Scanner</button>
          </div>
        </div>
      </div>
    </div>
    <script>
      document.getElementById("qrpage").onclick = function () {
        location.href = "http://localhost:3000/qr";
      };
      document.getElementById("scanpage").onclick = function () {
        location.href = "http://localhost:3000/scan";
      };
    </script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
