    <script>
      function openCam() {
        let videoElement = document.getElementById('videoCam');
        const photobutton = document.getElementById("photoBtn");
        let switchButton = document.getElementById('switchButton');

        let currentCamera = 'user'; // 'user' for front camera, 'environment' for back camera
        if (navigator.mediaDevices && navigator.mediaDevices.getUserMedia) {
            // Get user media with the current camera
            navigator.mediaDevices.getUserMedia({ video: { facingMode: currentCamera }, audio: false })
                .then(function (stream) {
                    videoElement.srcObject = stream;
                })
                .catch(function (error) {
                    console.error('Error accessing camera:', error);
                });

            // Switch between front and back cameras
            switchButton.addEventListener('click', function () {
                if (currentCamera === 'user') {
                    currentCamera = 'environment';
                } else {
                    currentCamera = 'user';
                }

                // Stop the current stream
                videoElement.srcObject.getTracks().forEach(function (track) {
                    track.stop();
                });

                // Get user media with the new camera
                navigator.mediaDevices.getUserMedia({ video: { facingMode: currentCamera }, audio: false })
                    .then(function (stream) {
                        videoElement.srcObject = stream;
                    })
                    .catch(function (error) {
                        console.error('Error switching camera:', error);
                    });
            });
            switchButton.style.display= "block";
            photobutton.style.display ="block";
        } else {
            console.error('getUserMedia is not supported in this browser');
        }
      }
      
