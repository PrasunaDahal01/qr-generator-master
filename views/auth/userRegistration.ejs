<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Registration Form</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;1,300;1,500;1,600&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css"
      integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />


    <link rel="stylesheet" href="/public/css/registerstyle.css" />
  </head>
  <body>
    <div class="box">
      <div class="row custom-row justify-content-center">
        <div class="col-sm-12 col-md-8 col-lg-6">
          <div class="container rounded my-2 px-0 insideContainer">
            <div id="messageBox" class="message-box
              py-3 mx-5 px-5  justify-content-center" ></div>
            <div class="py-1 header">
              <h1 class="text-center">Registration Form</h1>
            </div>

            <form action="" method="post" class="form" enctype="multipart/form-data">
              <div class="py-3 mx-5">
                <label for="email" class="form-label">Email:</label>
                <label for="" class="form-label"></label>
                <input
                  type="email"
                  name="email"
                  class="form-control p-2"
                  placeholder="example@gmail.com"
                  required
                />
              </div>

              <div class="py-3 mx-5">
                <label for="password" class="form-label">Password:</label>
                <input
                  type="password"
                  name="password"
                  class="form-control p-2"
                  placeholder="Enter Your Password"
                  required
                />
              </div>

              <div class="py-3 mx-5">
                <input
                  type="file"
                  name="image"
                  class="form-control p-2"
                  placeholder="Enter Your Picture:"
                  required
                />
              </div>
            
          <div  id="otpBox" class="py-3 mx-5" style="display: none;">
                <label for="otp" class="form-label">OTP:</label>
                <input type="number" name="otp" class="form-control p-2" id="otpInput">
              </div>
              
                <div class="py-3 mx-5 text-center text-white" id="submitOtpButton" style="display:none;">
                <input type="Submit" class="btn text-white" value="Submit" id="registerOtpButton" />
          </div>

              <div id="registerButton" class="py-3 mx-5 text-center text-white">
                <input type="Submit" class="btn text-white" value="Register" id="registerbutton" />
          </div>
          <div class="py-3 mx-5 d-flex justify-content-center">
            <p>Have an account?</p>
          <p> <a href="/auth/login" style="color:#3876BF; font-weight:900;">Log In</a> </p>
          </div>
            </form>
        </div>
      </div>
    </div>



<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="/public/javascript/storage.js"></script>
<script src="/public/javascript/requestManager.js"></script>
    <script>
      const formE1 = document.querySelector(".form");
const messageBox = document.getElementById("messageBox");
const otpBox = document.getElementById("otpBox");
const registerButton = document.getElementById("registerButton");
const otpInput = document.getElementById("otpInput");
const submitOtpButton = document.getElementById("submitOtpButton");



formE1.addEventListener("submit", async (event) => {
  event.preventDefault();

  const formData = new FormData(formE1);
  const data = Object.fromEntries(formData);

  if (!otpBox.style.display || otpBox.style.display === "none") {
    try{
      const response = await post({
      endpoint: "/api/v1/auth/sendOtp",
      headers: { "Content-Type": "application/json" },
      params: data,
    });

    const checkEmailResult = await response.data;
    
    if (checkEmailResult.success) {
      otpBox.style.display = "block";
      submitOtpButton.style.display = "block";
      registerButton.style.display = "none";
    }

    }catch(error){
    const errorMessage =
    error.response && error.response.data.message
      ? error.response.data.message
      : "An internal server error occurred.";

  messageBox.innerHTML = `<div class="alert alert-danger" role="alert">
    <i class="fas fa-times-circle"></i> ${errorMessage}
  </div>`;
  }   
  } else {
    try{
      const response = await post({
      endpoint: "/api/v1/auth/registers",
      headers: { 'Content-Type': 'multipart/form-data' },
      params: data,
    });
    const result = await response.data;
    }catch(error){
      const errorMessage =
      error.response && error.response.data.message
      ? error.response.data.message
      : "An internal server error occurred.";
      messageBox.innerHTML = `<div class="alert alert-danger" role="alert"><i class="fa fa-times-circle"></i> ${errorMessage}</div>`;
    }      
    }
});
    </script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
